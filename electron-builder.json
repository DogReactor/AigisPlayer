{
  "appId": "com.dogreactor.aigisplayer",
  "productName": "AigisPlayer",
  "directories": {
    "app": "dist",
    "output": "app-builds",
    "buildResources": "build"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "http://player.pigtv.moe/assets/aigisplayer"
    },
    {
      "provider": "github"
    }
  ],
  "win": {
    "icon": "./build/icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "mac": {
    "icon": "./build/icon.png",
    "target": ["dmg"]
  },
  "linux": {
    "category": "Game",
    "icon": "./build/icon.png",
    "target": ["deb", "AppImage", "pacman"]
  }
}
